{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "* * * * *"
  ],
  "packageRules": [
    {
      "groupName": "Terraform Updates",
      "matchManagers": [
        "terraform",
        "terraform-version",
        "tflint-plugin"
      ],
      "rebaseWhen": "never",
      "automerge": true
    },
    {
      "groupName": "Github Actions Updates",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "groupName": "Pre-commit Updates",
      "matchManagers": [
        "pre-commit"
      ],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
